<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      >

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <!-- <variable name="FilePath" value="${basedir}/k8sDemo-ApplicationCluster/"/>
  <variable name="ArchivePath" value="${basedir}/k8sDemo-ApplicationCluster/Archive/"/> -->
  <targets>
    <!-- k8sDemo-ApplicationCluster -->
    <target xsi:type="File" 
            name="k8sDemo-ApplicationCluster" 
            fileName=       "${basedir}/Logs/k8sDemo-ApplicationCluster/application.log"
            layout=         "${message}"
            archiveFileName="${basedir}/Logs/k8sDemo-ApplicationCluster/Archive/application.{#}.gz"
            archiveEvery= "Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyyMMdd"
            maxArchiveFiles="30"
            enableArchiveFileCompression="true" />

    <!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
    <!-- <target xsi:type="Console" name="lifetimeConsole" layout="${level:truncate=4:tolower=true}\: ${logger}[0]${newline}      ${message}${exception:format=tostring}" /> -->
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="K8sDemoLogManager.Services.RabbitLogReceiverService" minlevel="Debug" writeTo="k8sDemo-ApplicationCluster" />

    <!--Output hosting lifetime messages to console target for faster startup detection -->
    <!-- <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="lifetimeConsole" final="true" /> -->

    <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <!-- <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" /> -->
  </rules>
</nlog>

